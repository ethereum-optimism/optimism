{
  "name": "@pigi/wallet",
  "version": "0.0.10-alpha.0",
  "description": "Pigi client-side smart wallet",
  "main": "build/index.js",
  "files": [
    "build/**/*.js"
  ],
  "scripts": {
    "test": "mocha --require ts-node/register 'test/**/*.spec.ts' --timeout 5000 --exit",
    "lint": "tslint --format stylish --project .",
    "fix": "prettier --config ./.prettierrc.js --write 'index.ts' '{src,test}/**/*.ts'",
    "build": "tsc -p . && mkdir -p build/level",
    "clean": "rimraf build/ && rimraf log/",
    "validator": "node ./build/src/validator/monitor-and-validate.js"
  },
  "keywords": [
    "plasma",
    "group",
    "ethereum",
    "wallet"
  ],
  "author": "PG",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/plasma-group/pigi.git"
  },
  "dependencies": {
    "@pigi/core": "0.0.10-alpha.0",
    "@pigi/watch-eth": "0.0.10-alpha.0",
    "async-lock": "^1.2.2",
    "dotenv": "^8.1.0",
    "level": "^5.0.1"
  },
  "devDependencies": {
    "@pigi/prettier-config": "0.0.10-alpha.0",
    "@types/chai": "^4.1.7",
    "@types/debug": "^4.1.2",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "debug": "^4.1.1",
    "ethers": "^4.0.37",
    "memdown": "^5.0.0",
    "mocha": "^6.1.2",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "typescript": "^3.4.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
