{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "es7"
    ],
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules", "test"
  ],
  "include": [
    "src/**/*"
  ],
}