    "tsup": "^8.0.1",
    "typescript": "^5.4.5",
    "viem": "^2.8.13",
    "vite": "^5.1.7",
    "vitest": "^1.2.2",
    "zod": "^3.22.4"
  },
  "dependencies": {
    "@ethereumjs/rlp": "^5.0.2",
    "web3-eth": "^4.0.3",
