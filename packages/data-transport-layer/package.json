    "@eth-optimism/contracts": "0.5.40",
    "@eth-optimism/core-utils": "0.12.0",
    "@ethersproject/providers": "^5.7.0",
    "@ethersproject/transactions": "^5.7.0",
    "@sentry/node": "^6.3.1",
    "@sentry/tracing": "^6.3.1",
    "@types/express": "^4.17.12",
    "axios": "^0.21.1",
    "bcfg": "^0.1.6",
    "bfj": "^7.0.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ethers": "^5.7.0",
    "express": "^4.17.1",
    "express-prom-bundle": "^6.3.6",
    "level": "^6.0.1",
    "levelup": "^4.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/levelup": "^4.3.0",
    "bfj": "^7.0.2",
